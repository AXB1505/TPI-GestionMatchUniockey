<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Name="this"
             x:Class="Unihockey.Pages.Controls.Penalite">
    <HorizontalStackLayout>
        <VerticalStackLayout x:Name="boxPenalite"
                             IsVisible="False">
            <Border Style="{StaticResource ChronometreStyle}">
                <Label Text="00:00"/>
            </Border>
            <HorizontalStackLayout>
                <Button Text="Play"/>
                <Button Text="Pause"/>
                <Button Text="Stop"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>
        <CheckBox IsChecked="false"
                  CheckedChanged="OncbxPenaliteVisibleChecked"/>
    </HorizontalStackLayout>
</ContentView>
