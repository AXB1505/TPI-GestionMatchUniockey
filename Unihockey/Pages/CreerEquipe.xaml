<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Unihockey.Pages.CreerEquipe"
             Title="CreerEquipe"
             Style="{StaticResource PagesStyle}">
    
    <!--Conteneur des éléments de la page-->
    <VerticalStackLayout WidthRequest="800">
        
        <!--Titre de la page-->
        <Label Text="Créer une équipe"/>

        <!--Label et zone de texte pour la saisie du nom de l'équipe-->
        <Label Text="Nom :"
               HorizontalTextAlignment="Start"
               HorizontalOptions="Start"/>
        <Entry x:Name="tbxNom" Placeholder="Nom de l'équipe"/>
        
        <!--Label et zone de texte pour la saisie de la catégorie de l'équipe-->
        <Label Text="Categorie :"
               HorizontalTextAlignment="Start"
               HorizontalOptions="Start"/>
        <Picker x:Name="pickCategorie"/>
        <Button Text="Confirmer" 
                Clicked="OnbtnConfirmerClicked"/>
    </VerticalStackLayout>
</ContentPage>