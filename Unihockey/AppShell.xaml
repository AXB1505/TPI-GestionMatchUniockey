<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Unihockey.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Unihockey.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="Unihockey">

    <TabBar>
        <Tab Title="Accueil">
            <ShellContent
                ContentTemplate="{DataTemplate local:Accueil}"
                Route="Accueil" />
        </Tab>
        <Tab Title="Resultats">
            <ShellContent
                ContentTemplate="{DataTemplate local:ResultatsMatchs}"
                Route="ResultatsMatchs"/>
        </Tab>
        <Tab Title="Equipes">
            <ShellContent
                ContentTemplate="{DataTemplate local:GestionEquipes}"
                Route="GestionEquipes" />
        </Tab>
    </TabBar>
</Shell>
